Checks: >-
  bugprone-*,
  performance-*,
  portability-*,
  modernize-*,
  readability-identifier-naming,
  readability-use-anyofallof,
  readability-simplify-boolean-expr,
  readability-implicit-bool-conversion,
  misc-*,
  clang-analyzer-*,-clang-analyzer-alpha*,-clang-analyzer-osx*,-clang-analyzer-optin.performance.Padding
WarningsAsErrors: ''
HeaderFilterRegex: '^(src|tests)/'
FormatStyle: none
InheritParentConfig: false
CheckOptions:
  - key:             readability-identifier-naming.VariableCase
    value:           lower_case
  - key:             readability-identifier-naming.PrivateMemberSuffix
    value:           _
  - key:             readability-identifier-naming.ClassCase
    value:           CamelCase
  - key:             readability-identifier-naming.StructCase
    value:           CamelCase
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  - key:             modernize-loop-convert.MinConfidence
    value:           reasonable
  - key:             bugprone-exception-escape.ThrowInNoexceptFunctions
    value:           1
  - key:             bugprone-virtual-near-miss.IgnoreMacros
    value:           1
  - key:             performance-move-const-arg.CheckTriviallyCopyableMove
    value:           1
  - key:             readability-identifier-naming.FunctionCase
    value:           camelBack
